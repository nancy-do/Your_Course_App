<% provide(:title, 'Create a new course') %>
<h1>Create a new course</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_for(@course, url: create_course_path) do |f| %>
    
      <%= render 'shared/course_error_messages' %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      
      <%= f.label :prerequisite %>
      <%= f.text_field :prerequisite, class: 'form-control' %>
      
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control', :cols => 10, :rows => 10 %>
      
      <%= f.label :locations %>
      
      <% @locations.each do |location| %>
        <%= f.check_box( :locations, {class: 'form-control'}, location.id)%>
        <%= location.locationName %>
      <% end %>
      
      
      
      
      
      

      <%= f.submit "Create Category", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>